<Window x:Class="_02_MarginPadding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_MarginPadding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <UniformGrid Columns="4">
        <Button BorderThickness="10" BorderBrush="BlueViolet" Background="Red" FontSize="50">Hello</Button>
        <Border Background="GreenYellow">
            <Button Margin="20" Background="Green"></Button>
        </Border>        
        <Button Background ="Yellow" BorderThickness="5,10,15,20" BorderBrush="Blue"></Button>
        <Border Background="Pink" Padding="30" >
            <Button Background="Chocolate"></Button>
        </Border>
        <Image Source="Image/boxmodel.png"></Image>
    </UniformGrid>
</Window>
